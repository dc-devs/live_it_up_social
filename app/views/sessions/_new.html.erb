
<div class='loginModalWidth'>
  <%= form_for :session, url: sessions_path, html: {class: "form"} do |f| %>
      <ul class="zero list-unstyled">
        <li>
          <div class="form-header">
            Log In
          </div>
        </li>
        <li>
          <p class="form-label">
            Email
          </p>
          <div class="form-input">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </li>
        <li>
          <p class="form-label">
            Password
          </p>
          <div class="form-input">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </li>
        <li>
          <%= f.submit "Login", :class => "btn-old btn-green form-submit" %>
        </li>
      </ul>
<% end %>
</div>



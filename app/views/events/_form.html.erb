<%= form_for @event do |f| %>
  <div class="form-inputs">
    <div class="field">
      <%= f.label :date %>
      <%= f.text_field :date %>
    </div>
    <div class="field">
      <%= f.label :start_time %>
      <%= f.text_field :start_time %>
    </div>
    <div class="field">
      <%= f.label :duration %>
      <%= f.text_field :duration %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "submit", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="form-wrapper">
<%= form_for :user, url: users_path, html: {:class=> "form"} do |f| %>

  <ul class="zero list-unstyled">
    <li>
      <div class="form-header">
        The Basics
      </div>
    </li>
    <li>
      <p class="form-label">
        Name
      </p>
      <div class="form-input-half-first">
        <%= f.text_field :first_name, :class=> "form-control" %>
      </div>
      <div class="form-input-half-second">
        <%= f.text_field :last_name, :class=> "form-control" %>
      </div>
    <li>
      <p class="form-label">
        Picture URL
      </p>
      <div class="form-input">
        <%= f.text_field :picture_url, :class=> "form-control" %>
      </div>
    </li>
    </li>
    <li>
      <p class="form-label">
        Username
      </p>
      <div class="form-input">
        <%= f.text_field :username, :class=> "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Email
      </p>
      <div class="form-input">
        <%= f.email_field :email, :class=> "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Motto
      </p>
      <div class="form-input">
        <%= f.text_field :motto, :class=> "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Professional Blurb
      </p>
      <div class="form-input">
        <%= f.text_field :professional_blurb, :class=> "form-control" %>
      </div>
    </li>
    <li>
      <%= f.submit "Sign Up!", :class => "btn-old btn-green form-submit" %>
    </li>
  <% end %>
</div>

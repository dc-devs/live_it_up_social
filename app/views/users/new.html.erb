<div class="form-wrapper">
<%= form_for :user, url: users_path, html: {class: "form"} do |f| %>
  <ul class="zero list-unstyled">
    <li>
      <div class="form-header">
        Sign Up
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited
            this article from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </li>
    <li>
      <p class="form-label">
        First Name
      </p>
      <div class="form-input">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Last Name
      </p>
      <div class="form-input">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Username
      </p>
      <div class="form-input">
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Password
      </p>
      <div class="form-input">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Email
      </p>
      <div class="form-input">
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Motto
      </p>
      <div class="form-input">
        <%= f.text_field :motto, class: "form-control" %>
      </div>
    </li>
    <li class="form-input-photo">
      <p class="form-label">
        Photo
      </p>
      <div class="form-input">
        <%= f.file_field :photo, :class=>"form-input" %>
      </div>
    </li>
    <li>
      <p class="form-label">
        Professional Blurb
      </p>
      <div class="form-input">
        <%= f.text_field :professional_blurb, class: "form-control" %>
      </div>
    </li>
    <li>
      <%= f.submit "Sign Up!", :class => "btn-old btn-green form-submit" %>
    </li>

  <% end %>
</div>

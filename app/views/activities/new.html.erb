<h1>Add an Activity</h1>
<%= form_for @activity do |f| %>
<%= f.text_field :title, :placeholder => "title", :class => "form-control" %>
<%= f.text_field :description, :placeholder => "description", :class => "form-control"  %>
<%= f.text_field :location, :placeholder => "location", :class => "form-control" %>
<%= f.text_field :necessities, :placeholder => "necessities", :class => "form-control" %>
<%= f.select(:category, options_for_select([
['Biking','biking'],
['Climbing','climbing'],
['Drinking','drinking'],
['Hiking','hiking'],
['Kayaking','kayaking'],
['Paddleboarding','paddleboarding'],
['Sailing','sailing'],
['Surfing','surfing'],
['Other','other']])) %>

<%= f.file_field :photo %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit 'Submit Activity', :class => "btn btn-success" %>
<% end %>





